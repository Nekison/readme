#!/bin/bash
# This file was autogenerated by node-deb 0.10.4
set -e
set -o pipefail

declare -ri no_rebuild='0'

add_user() {
  : "${1:?'User was not defined'}"
  declare -r user="$1"
  declare -r uid="$2"

  if [ -z "$uid" ]; then
    declare -r uid_flags=""
  else
    declare -r uid_flags="--uid $uid"
  fi

  declare -r group="${3:-$user}"
  declare -r descr="${4:-No description}"
  declare -r shell="${5:-/bin/false}"

  if ! getent passwd | grep -q "^$user:"; then
    echo "Creating system user: $user in $group with $descr and shell $shell"
    useradd $uid_flags --gid $group --no-create-home --system --shell $shell -c "$descr" $user
  fi
}

add_group() {
  : "${1:?'Group was not defined'}"
  declare -r group="$1"
  declare -r gid="$2"

  if [ -z "$gid" ]; then
    declare -r gid_flags=""
  else
    declare -r gid_flags="--gid $gid"
  fi

  if ! getent group | grep -q "^$group:" ; then
    echo "Creating system group: $group"
    groupadd $gid_flags --system $group
  fi
}

add_group 'python3-rtdb-sync-pub' ''
add_user 'python3-rtdb-sync-pub' '' 'python3-rtdb-sync-pub' 'python3-rtdb-sync-pub user-daemon' '/bin/false'

mkdir -p '/var/log/python3-rtdb-sync-pub'
chown -R 'python3-rtdb-sync-pub:python3-rtdb-sync-pub' '/var/log/python3-rtdb-sync-pub'

